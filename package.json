{
    "name": "convertible",
    "version": "1.0.0",
    "description": "Universal file conversion tool",
    "private": true,
    "scripts": {
        "start": "vite",
        "dev": "vite",
        "build": "vite build",
        "tauri": "tauri",
        "tauri:dev": "tauri dev",
        "tauri:build": "tauri build",
        "css:watch": "tailwindcss -i ./public/css/styles.css -o ./public/css/output.css --watch",
        "css:build": "tailwindcss -i ./public/css/styles.css -o ./public/css/output.css --minify"
    },
    "workspaces": [
        "engine",
        "imageconverter",
        "audioconverter",
        "dawconverter"
    ],
    "dependencies": {
        "@tailwindcss/forms": "^0.5.6",
        "daisyui": "^3.9.0",
        "express": "^4.18.2",
        "fluent-ffmpeg": "^2.1.3",
        "multer": "^1.4.5-lts.1"
    },
    "devDependencies": {
        "@tauri-apps/api": "^1.6.0",
        "@tauri-apps/cli": "^1.5.0",
        "autoprefixer": "^10.4.20",
        "nodemon": "^3.0.1",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.17",
        "vite": "^4.4.9"
    }
}
